  },
  "homepage": "https://github.com/Avaq/serialize-http-error",
  "devDependencies": {
    "chai": "^3.5.0",
    "codecov": "^2.1.0",
    "eslint": "^3.19.0",
    "eslint-config-warp": "^1.2.0",
    "istanbul": "^0.4.5",
    "jsverify": "^0.8.2",
    "mocha": "^3.2.0",
    "rimraf": "^2.6.1",
    "xyz": "^2.1.0"
  }
